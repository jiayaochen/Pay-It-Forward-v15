<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/adapterReview_textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20sp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/adapterReview_ImageView_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:paddingLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <RatingBar
            android:id="@+id/adapterReview_ratingBar_starRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@+id/adapterReview_ImageView_image"
            android:layout_toEndOf="@+id/adapterReview_ImageView_image"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/adapterReview_textView_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="2dp"
        android:textColor="#33CC33"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"/>


    <TextView
        android:id="@+id/adapterReview_textView_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="74dp"
        android:textSize="15sp"/>


</LinearLayout>