<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/adapterOffers_imageView_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/adapterOffers_textView_taskerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/adapterOffers_imageView_image"
        android:layout_toEndOf="@+id/adapterOffers_imageView_image"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/adapterOffers_button_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:text="Accept"/>

    <Button
        android:id="@+id/adapterOffers_button_decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/adapterOffers_button_accept"
        android:layout_toStartOf="@id/adapterOffers_button_accept"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:text="Decline"/>

</RelativeLayout>
